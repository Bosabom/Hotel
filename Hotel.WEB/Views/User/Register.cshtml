@model Hotel.WEB.Models.RegisterUserModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<h2>Sign up</h2>

@Html.ValidationSummary(true)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.Login)
            @Html.EditorFor(model => model.Login)
            @Html.ValidationMessageFor(model => model.Login)
        </div>

        <br /><br />
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <br /><br />
        <div class="form-group">
            @Html.LabelFor(model => model.RepeatPassword)
            @Html.EditorFor(model => model.RepeatPassword)
            @Html.ValidationMessageFor(model => model.RepeatPassword)
        </div>
        <br />

        <div class="form-group">
            <input type="submit" class="btn" value="Sign up" />
        </div>
    </div>
}
@Html.ActionLink("Log in", "Login", null, new[] { "btn" })